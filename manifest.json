{

  "manifest_version": 2,
  "name": "Wizz-reloaded",
  "version": "1.0",

  "description": "Ping everyone !",

  "icons": {
    "48": "icons/ping.png"
  },

  "browser_action": {
    "default_icon": "icons/ping.png",
    "default_title": "Wizzzzz",
    "default_popup": "popup/ping.html"
  },

  "permissions": [
    "activeTab"
  ],

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["wizz.js"]
    }
  ]

}
